    "@types/node": "^14.11.2",
    "@vercel/ncc": "^0.24.1",
    "dotenv": "^8.2.0",
    "jest": "^26.4.2",
    "jest-circus": "^26.4.2",
    "jest-runtime": "^26.4.2",
    "prettier": "^2.1.2",
