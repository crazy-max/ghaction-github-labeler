{
  "name": "github-labeler",
  "description": "GitHub Action to manage labels on GitHub",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc && ncc build",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "cleanup-paths": "removeNPMAbsolutePaths ./ --force --fields _where _args",
    "pre-checkin": "npm run format && npm run cleanup-paths && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/crazy-max/ghaction-github-labeler.git"
  },
  "keywords": [
    "actions",
    "github",
    "labels"
  ],
  "author": "CrazyMax",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.2.4",
    "@actions/github": "^2.2.0",
    "js-yaml": "^3.13.1",
    "matcher": "^3.0.0"
  },
  "devDependencies": {
    "@actions/io": "^1.0.2",
    "@types/node": "^14.0.4",
    "@zeit/ncc": "^0.22.2",
    "prettier": "^2.0.5",
    "removeNPMAbsolutePaths": "^2.0.0",
    "typescript": "^3.9.2",
    "typescript-formatter": "^7.2.2"
  }
}
